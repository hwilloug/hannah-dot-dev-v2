</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .section {
    margin: 2rem 0;
  }

  .content {
    padding: 8px;
  }

  #hero {
    text-align: center;
    min-height: 60vh;
    display: flex;
    flex-direction: column;
  }

  #hero h1 {
    font-size: 3rem;
    margin: 2rem 0 1rem;
    color: var(--text);
  }

  .subtitle {
    font-size: 1.5rem;
    margin: 1rem 0;
    color: var(--text);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .skill-folder {
    background: var(--button-face);
    padding: 8px;
    border-top: 2px solid var(--button-highlight);
    border-left: 2px solid var(--button-highlight);
    border-right: 2px solid var(--button-shadow);
    border-bottom: 2px solid var(--button-shadow);
  }

  .skill-folder h3 {
    margin: 0 0 8px;
    font-size: 1rem;
    font-weight: bold;
    font-family: "MS Sans Serif", "Quicksand", sans-serif;
  }

  .skill-items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    gap: 8px;
  }

  .skill-item {
    background: var(--pink-bg);
    padding: 4px 8px;
    border-top: 1px solid var(--button-highlight);
    border-left: 1px solid var(--button-highlight);
    border-right: 1px solid var(--button-shadow);
    border-bottom: 1px solid var(--button-shadow);
    font-size: 0.9rem;
    text-align: center;
  }

  .cert-grid, .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
  }

  .cert-item, .project-item {
    background: var(--button-face);
    padding: 12px;
    border-top: 2px solid var(--button-highlight);
    border-left: 2px solid var(--button-highlight);
    border-right: 2px solid var(--button-shadow);
    border-bottom: 2px solid var(--button-shadow);
  }

  .cert-item h3, .project-item h3 {
    margin: 0 0 8px;
    font-size: 1rem;
    font-weight: bold;
    font-family: "MS Sans Serif", "Quicksand", sans-serif;
  }

  .cert-date {
    display: block;
    font-size: 0.9rem;
    color: var(--text);
    margin-top: 8px;
  }

  .contact-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .action-button {
    background: var(--button-face);
    border-top: 2px solid var(--button-highlight);
    border-left: 2px solid var(--button-highlight);
    border-right: 2px solid var(--button-shadow);
    border-bottom: 2px solid var(--button-shadow);
    padding: 4px 12px;
    font-family: "MS Sans Serif", "Quicksand", sans-serif;
    font-size: 0.9rem;
    color: var(--text);
    text-decoration: none;
    cursor: pointer;
  }

  .action-button:active {
    border-top: 2px solid var(--button-shadow);
    border-left: 2px solid var(--button-shadow);
    border-right: 2px solid var(--button-highlight);
    border-bottom: 2px solid var(--button-highlight);
    padding: 5px 11px 3px 13px;
  }

  @media (max-width: 768px) {
    #hero h1 {
      font-size: 2rem;
    }

    .contact-links {
      flex-direction: column;
    }

    .action-button {
      width: 100%;
      text-align: center;
    }
  }
</style>